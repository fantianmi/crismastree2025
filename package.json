{
  "name": "christmas-tree-interactive",
  "version": "1.0.0",
  "description": "Interactive Christmas Tree with Three.js and MediaPipe hand gestures",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npx serve -p 3000",
    "local": "npx http-server -p 8080 -o",
    "open": "open index.html",
    "test": "node server.js",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir -p dist && cp index.html trackintime.mp3 dist/ && cp -r images dist/",
    "predeploy": "npm run build",
    "serve:dist": "npx serve dist -p 3000"
  },
  "keywords": [
    "three.js",
    "mediapipe",
    "webgl",
    "christmas",
    "interactive"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "serve": "^14.2.5"
  }
}
